<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    android:background="#000">

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageResourceGridDownload"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimary"
                android:contentDescription="@string/resources"
                app:srcCompat="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/buttonResourceGridDownload"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_file_download_black_24dp"
                android:text="" />

            <TextView
                android:id="@+id/resourceNameGridDownload"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/imageResourceGridDownload"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="@string/resources"
                android:textColor="#000" />

            <RadioButton
                android:id="@+id/checkBoxResourceGridDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/buttonResourceGridDownload"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>